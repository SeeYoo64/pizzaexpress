@page "/admin"
@attribute [Authorize]
@using Web.Auth
@layout MainLayout
@inject CustomAuthStateProvider AuthService
@inject NavigationManager NavManager

<h3>Admin Panel</h3>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">🍕 Pizzas</h5>
                <p class="card-text">Add, edit or remove pizzas from the menu.</p>
                <a href="/admin/pizzas" class="btn btn-primary">Manage Pizzas</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">📦 Orders</h5>
                <p class="card-text">View and manage customer orders.</p>
                <a href="/admin/orders" class="btn btn-primary">View Orders</a>
            </div>
        </div>
    </div>

</div>

<button class="btn btn-danger" @onclick="Logout">Logout</button>

@code {
    private async Task Logout()
    {
        await AuthService.Logout();
        NavManager.NavigateTo("/admin/login");
    }
}